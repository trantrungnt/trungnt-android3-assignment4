<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorFrameLayoutAuthor"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnClose"
            android:background="@drawable/close"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height" />

        <Button
            android:id="@+id/btnFullscreen"
            android:background="@drawable/fullscreen"
            android:layout_toLeftOf="@+id/btnClose"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height" />

        <Button
            android:id="@+id/btnMiniature"
            android:background="@drawable/miniature"
            android:layout_toLeftOf="@+id/btnFullscreen"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height" />

        <Button
            android:id="@+id/btnShow"
            android:layout_alignParentBottom="true"
            android:text="@string/label_button_show"
            android:layout_width="@dimen/button_show_width"
            android:layout_height="@dimen/button_show_heigth" />

        <Button
            android:id="@+id/btnHide"
            android:text="@string/label_button_hide"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/btnShow"
            android:layout_marginLeft="@dimen/button_hide_marginLeft"
            android:layout_width="@dimen/button_hide_width"
            android:layout_height="@dimen/button_hide_height" />

        <ImageView
            android:src="@drawable/trungnt"
            android:layout_above="@+id/btnShow"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/image_view_activity_main_marginBotton"
            android:layout_width="@dimen/image_view_activity_main_width"
            android:layout_height="@dimen/image_view_activity_main_height" />
    </RelativeLayout>
</FrameLayout>