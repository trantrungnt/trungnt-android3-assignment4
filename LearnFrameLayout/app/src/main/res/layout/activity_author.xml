<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutAuthor"
    android:layout_marginTop="@dimen/relalive_layout_author_marginTop"
    android:background="@color/colorFrameLayoutAuthor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnCloseAuthor"
        android:background="@drawable/close"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height" />

    <Button
        android:id="@+id/btnFullscreenAuthor"
        android:background="@drawable/fullscreen"
        android:layout_toLeftOf="@+id/btnCloseAuthor"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height" />

    <Button
        android:id="@+id/btnMiniatureAuthor"
        android:background="@drawable/miniature"
        android:layout_toLeftOf="@+id/btnFullscreenAuthor"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height" />

    <Button
        android:id="@+id/btnShowAuthor"
        android:layout_alignParentBottom="true"
        android:text="@string/label_button_show"
        android:layout_width="@dimen/button_show_width"
        android:layout_height="@dimen/button_show_heigth" />

    <Button
        android:id="@+id/btnHide"
        android:text="@string/label_button_hide"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnShowAuthor"
        android:layout_marginLeft="@dimen/button_hide_marginLeft"
        android:layout_width="@dimen/button_hide_width"
        android:layout_height="@dimen/button_hide_height" />

    <ImageView
        android:src="@drawable/trungnt"
        android:layout_above="@+id/btnShowAuthor"
        android:layout_below="@+id/btnMiniatureAuthor"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/image_view_activity_main_marginBotton"
        android:layout_width="@dimen/image_view_activity_main_width"
        android:layout_height="@dimen/image_view_activity_main_height" />
</RelativeLayout>